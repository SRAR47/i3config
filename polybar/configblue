[colors]
background = #070707
background-alt = #121212
foreground = #ffffff
primary = #0d72fc
secondary = #ffffff
alert = #be4f4f
disabled = #3d484d

[bar/mybar]
width = 100%
height = 24pt
radius = 10
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2pt
border-size = 2pt
border-color = #00000000
padding-left = 3
padding-right = 3
module-margin = 2
separator =
separator-foreground = ${colors.secondary}
font-0 = Ubuntu:style=Bold:pixelsize=12.5
modules-left = day date time
modules-center = xworkspaces
modules-right = brightness pulseaudio battery
enable-ipc = true
font-1 = Font Awesome 6 Free:style=Solid:size=10
font-2 = Font Awesome 6 Brands:style=Regular:size=10

[module/xworkspaces]
type = internal/xworkspaces
label-active = %name%
label-active-background = ${colors.primary}
label-active-foreground = ${colors.background}
label-active-padding = 2
label-occupied = %name%
label-occupied-padding = 2
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-foreground = ${colors.background}
label-urgent-padding = 2
label-empty = %name%
label-empty-foreground = ${colors.disabled}
label-empty-padding = 2
tail = true
enable-click = false
enable-scroll = false

[module/pulseaudio]
type = internal/pulseaudio
format-volume-prefix = "  "
format-volume-prefix-foreground = ${colors.primary}
format-volume = <label-volume>
label-volume = %percentage%%
label-muted = 
label-muted-foreground = ${colors.disabled}

[module/date]
type = internal/date
interval = 1
date = %d, %b
date-alt = 
label = %date%
label-foreground = ${colors.primary}

[module/day]
type = internal/date
interval = 1
date = %a
date-alt =
label = %date%
label-foreground = ${colors.primary}

[module/time]
type = internal/date
interval = 1
date = %H:%M
date-alt = %H:%M
label = %date%
label-foreground = ${colors.primary}

[module/brightness]
type = custom/script
exec = brightnessctl | awk -F'[()]' '/Current brightness/ {print "%{F#0d72fc}%{F-} " $2}'
interval = 1
label = %output%

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
poll-interval = 5
low-at = 5
full-at = 99

format-charging = %{F#0d72fc}%{F-} %{F#ffffff}<label-charging>%{F-}
format-discharging = %{F#0d72fc}%{F-} %{F#ffffff}<label-discharging>%{F-}
format-full = %{F#0d72fc}%{F-} %{F#ffffff}<label-full>%{F-}

label-charging = %percentage%%
label-discharging = %percentage%%
label-full = %percentage%%

[settings]
screenchange-reload = true
pseudo-transparency = true

