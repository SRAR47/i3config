[module/brightness]
type = custom/script
exec = brightnessctl | awk -F'[()]' '/Current brightness/ {print "%{F#a3b8c8}%{F-} " $2}'
interval = 1
label = %output%

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
poll-interval = 5
low-at = 5
full-at = 99

format-charging = %{F#a3b8c8}%{F-} %{F#ffffff}<label-charging>%{F-}
format-discharging = %{F#a3b8c8}%{F-} %{F#ffffff}<label-discharging>%{F-}
format-full = %{F#a3b8c8}%{F-} %{F#ffffff}<label-full>%{F-}

label-charging = %percentage%%
label-discharging = %percentage%%
label-full = %percentage%%

[module/wifi-rofi]
